<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <TextView
        android:id="@+id/nav_home"
        style="@style/nav_titles"
        android:text="@string/home"
        android:drawableLeft="@drawable/ic_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/nav_profile"
        style="@style/nav_titles"
        android:text="@string/profile"
        android:drawableLeft="@drawable/ic_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_home" />
    <TextView
        android:id="@+id/nav_userinfo"
        style="@style/nav_titles"
        android:text="@string/user_info"
        android:drawableLeft="@drawable/ic_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_profile" />
    <TextView
        android:id="@+id/nav_add"
        style="@style/nav_titles"
        android:text="@string/add_user"
        android:drawableLeft="@drawable/ic_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_userinfo" />
    <TextView
        android:id="@+id/nav_expand"
        style="@style/nav_titles"
        android:text="@string/expandable_list"
        android:drawableLeft="@drawable/ic_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_add" />
    <TextView
        android:id="@+id/nav_pager"
        style="@style/nav_titles"
        android:text="@string/view_pager"
        android:drawableLeft="@drawable/ic_slider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_expand" />

</androidx.constraintlayout.widget.ConstraintLayout>